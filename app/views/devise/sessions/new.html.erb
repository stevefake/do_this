<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: user_session_path) do |f| %> <!-- session_path(resource_name) -->
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>
<p>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>
</p>
<p>
  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>
<p>
  <div class="actions">
    <%= f.submit "Log in", class: 'btn btn-sm btn-default' %> | <%= render "devise/shared/links" %>
  </div>
<% end %>
<p>
