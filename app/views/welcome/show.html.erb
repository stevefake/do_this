
<h3><%= @result.name %></h3>
<p>
  <%= image_tag(@result.image_url) %>
  <p>
  Rating: <%= @result.rating %>
  <p>
  Snippet text: <%= @result.snippet_text %>
  <p>
  Phone: <%= @result.display_phone %>
  <p>
  Business is closed right now?: <%= @result.is_closed %>
